<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonMinus">
        <item name="android:background">@drawable/button_minus</item>
    </style>
    <style name="ButtonPlus">
        <item name="android:background">@drawable/button_plus</item>
    </style>
    <style name="TextPlusMinus">
        <item name="android:background">@drawable/text_pm</item>
    </style>
    <style name="StrokeThx">
        <item name="android:background">@drawable/stroke_thx</item>
    </style>
    <style name="ShadowThx">
        <item name="android:background">@drawable/shadow_thx</item>
    </style>
</resources>

