<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/cart_fr_text_item"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/style_text_all_corner"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Поездка на Фишт ... "
        android:inputType="textMultiLine|textPersonName"
        android:maxLines="3"
        android:minLines="1"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="80dp"
        android:paddingBottom="10dp"
        android:singleLine="false"
        android:textColor="@color/three_item_light_text"
        android:textColorHint="@color/roboto_regular_color"
        android:textSize="@dimen/text_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cart_fr_text_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:fontFamily="@font/roboto"
        android:text="16:19"
        android:textColor="@color/text_red"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_fr_text_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cart_fr_text_item" />

    <ImageView
        android:id="@+id/cart_fr_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_fr_text_item"
        app:layout_constraintEnd_toStartOf="@+id/cart_fr_text_clock"
        app:layout_constraintTop_toTopOf="@+id/cart_fr_text_item"
        app:srcCompat="@drawable/ic_clock_on" />
</androidx.constraintlayout.widget.ConstraintLayout>